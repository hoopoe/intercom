  <% else %>
    <%= javascript_include_tag 'lib/underscore-min.js', 'lib/backbone-min.js', 'lib/infiniScroll.js', 'lib/rivets.min.js', 'lib/etch.js', 'lib/moment.min.js', 'require.js', 'app-classic.js', :plugin => 'tercomin' %>
