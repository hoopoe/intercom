      <div class="emp-ph">
      </div>
    </div>
    <div class="col-md-6">
      <div class="mgrs-ph">
      </div>
    </div>
  <div>
<div>
</script>

<script type="text/html" id="questions-header-template" >
  <div class="form-group col-md-12 questions-header">
    <span class="fio">{t.lastname} </span>
    <span class="fio"> {t.firstname}</span>
    <span class="fio" rv-unless="t.lastname" rv-text="t.lastnameRu"></span>
    <span class="fio" rv-unless="t.firstname" rv-text="t.firstnameRu"></span>
    <br>
    <label for="uPosition">Position: </label>
    <span id="uPosition"> {t.position} </span>

    <span rv-if="t.peons"> (</span>
      <a rv-each-i="t.peons" rv-href-rooted="i.id" data-root='#user_event/'>
          {i.name} 
      </a>
    <span rv-if="t.peons">)</span>
    <br/>
    <label for="uProject">Project: </label>
    <span id="uProject"> {t.project}</span>
    <br/>
    <label for="uExtraProject">Extra project: </label>
    <span id="uExtraProject"> {t.extraProject}</span>
    <br/>
    <label for="uCreatedOn">Employment date: </label>
    <span id="uCreatedOn"> {t.created_on | date}</span>
  </div> 
</script>

<script type="text/html" id="mgr-emp-li-template" >
  <div class="form-group col-md-12 questionItem">
    <label for="group">Group: </label>
    <span id="group">{ t:header }</span>
    <br>
    <label for="employee">Employee: </label>
    <span>{ t:employee }</span>
    <br>
    <span>Вопрос:</span>
    <input type="text" class="form-control" rv-value="t:a"/>
    <span>Вопрос:</span>
    <input type="text" class="form-control" rv-value="t:a"/>
    <span>Вопрос:</span>
    <input type="text" class="form-control" rv-value="t:a"/>
  </div> 
</script>

