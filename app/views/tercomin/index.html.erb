<% content_for :header_tags do %>

  <% if @themeName == 'bootswatch' %>
    <%= javascript_include_tag 'lib/underscore-min.js', 'lib/backbone-min.js', 'lib/infiniScroll.js', 'lib/rivets.min.js', 'lib/etch.js', 'lib/moment.min.js', 'require.js', 'app.js', :plugin => 'tercomin' %>
